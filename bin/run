#!/usr/bin/env python
import sys
import yaml
import os
import imp 
sys.path.append(os.path.abspath(os.path.join(__file__,"../..")))
from __init__ import create_classifier,create_generator,create_processor

if len(sys.argv) > 1:
  configFilePath = os.path.abspath(os.path.join(__file__,"../..","config",sys.argv[1]))
  args = sys.argv[2:]
  for i in range(0, len(args)):
    arg = args[i]
    if arg == "-g" or arg == "--generate":
      generator = create_generator(configFilePath)
      generator.run()
    if arg == "-c" or arg == "--classify":
      if 
      testFilePath = args[i+1]
      i += 1
      classifier = create_classifier(configFilePath, testFilePath)
      classifier.run()
    if arg == "-a" or arg == "--annotate":
      processor = create_processor(configFilePath)
      processor.process()
else:
  print "Please enter a valid configuration file path"
  sys.exit(0)




